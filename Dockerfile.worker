FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm ci

# Generate Prisma client (necessário mesmo em produção)
RUN npx prisma generate

# Copy worker source files
COPY scripts ./scripts
COPY app ./app
COPY lib ./lib
COPY tsconfig.json ./

# Expose worker port (optional for health checks)
EXPOSE 8080

# Start worker with tsx (runs TypeScript directly)
CMD ["npx", "tsx", "scripts/worker.ts"]

