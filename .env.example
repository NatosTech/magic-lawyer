# NextAuth / Auth.js
NEXTAUTH_URL=http://localhost:9192
NEXTAUTH_SECRET=defina_um_valor_seguro

# Banco
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/magic_lawyer?schema=magiclawyer

# Redis / BullMQ
REDIS_URL=redis://localhost:6379

# Realtime (Ably)
ABLY_API_KEY=coloque_sua_chave
NEXT_PUBLIC_ABLY_CLIENT_KEY=coloque_sua_chave_publica
